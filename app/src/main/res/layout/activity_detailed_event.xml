<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reldetailed"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04051f"
    android:padding="10dp"
    tools:context="Activity.DetailedEventActivity">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollViewDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:id="@+id/event_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_baseline_event_24" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_baseline_event_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_baseline_event_24" />

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="2dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_baseline_event_24" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_images"
                android:layout_margin="3dp"
                android:fontFamily="@font/alegreya_bold"
                android:padding="20dp"
                android:textColor="#80deea"
                android:textSize="24sp"
                tools:text="HEY Nishay" />

            <TextView
                android:id="@+id/et_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_name"
                android:layout_margin="3dp"
                android:padding="20dp"
                android:textColor="@color/White"
                android:textSize="13sp"
                tools:text="HEY Nishay" />
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/member_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>