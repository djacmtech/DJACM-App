<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="252dp"
        android:layout_height="244dp"
        app:cardCornerRadius="10dp"
    android:outlineAmbientShadowColor="#3BFBFE"
        android:elevation="6dp"
        android:layout_margin="18dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="114dp"
                android:id="@+id/logo_acm"
                android:layout_gravity="top|start"
                android:foregroundGravity="top"
                app:srcCompat="@drawable/ic_acm"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/logo_acm"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:padding="4dp"
                    android:text="date" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13.5sp"
                    android:padding="4dp"
                    android:text="event name "/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:padding="4dp"
                    android:text="description"/>
                <Button
                    android:layout_width="101dp"
                    android:layout_height="21dp"
                    android:textSize="11sp"
                    android:textColor="#fff"
                    android:id="@+id/event_register_button"
                    android:layout_margin="4dp"
                    android:background="@drawable/qs_button_shape"
                    android:text="Register Now!"
                    android:textAllCaps="false"
                    />
            </LinearLayout>
        </RelativeLayout>


</android.support.v7.widget.CardView>