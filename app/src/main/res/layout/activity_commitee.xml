<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CommiteeFragment">

    <LinearLayout
        android:id="@+id/faculty_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/faculty_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/faculty_title_text"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/faculty_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/committee_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/faculty_div"
        android:layout_marginTop="16dp"
        >

        <RelativeLayout
            android:title="@+id/year_selection_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/committee_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/committee_title_text"
                android:textSize="24sp"
                android:textStyle="bold"
                />

            <Spinner
                android:id="@+id/committee_year_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:backgroundTint="@color/newUiArrowColor"
                />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/committee_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>


</RelativeLayout>