<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.THRegistration">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TREASURE HUNT REGISTRATION FORM"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_margin="45dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/username_pass_tv"
            android:layout_margin="8dp"
            android:text="Name" />

        <EditText
            android:id="@+id/event_register_name"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            style="@style/username_pass_tv"
            android:text="Department" />

        <Spinner
            android:id="@+id/event_register_dept"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            style="@style/username_pass_tv"
            android:text="Year" />

        <Spinner
            android:id="@+id/event_register_year"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/username_pass_tv"
            android:inputType="textEmailAddress"
            android:hint="@string/prompt_email"
            android:textColor="#3BFBFE"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_margin="8dp"
            android:text="Email" />

        <EditText
            android:id="@+id/event_register_email"
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            style="@style/username_pass_tv"
            android:text="phone number" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_margin="8dp"
            android:inputType="phone"
            android:id="@+id/event_regsiter_phone"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>