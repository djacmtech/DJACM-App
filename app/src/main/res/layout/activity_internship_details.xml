    tools:context=".Activity.InternshipDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/ic_launcher1_round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_logo"
            android:orientation="vertical">


            <TextView
                android:id="@+id/company_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_slab_bold"
                android:text="Company Name"
                android:textColor="#fff"
                android:textSize="28sp" />
            <TextView
                android:layout_width="match_parent"
                android:text="Company Website"
                android:layout_margin="4dp"
                android:textSize="18sp"
                android:fontFamily="@font/alegreya_bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/company_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="italic"
                android:clickable="true"
                android:text="company website tv"
                android:textColor="#3CF7FB"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/alegreya_bold"
                android:text="Company Description"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/company_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="italic"
                android:text="Company Description TV"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/alegreya_bold"
                android:text="Job Description"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/job_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="italic"
                android:text="Job Description tv"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="@font/alegreya_bold"
                android:text="Skills Required"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/company_skill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="italic"
                android:text="Skills TV"
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Stipend"
                android:fontFamily="@font/alegreya_bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/stipend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="italic"
                android:text="stipend tv "
                android:textSize="16sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Perks offered"
                android:fontFamily="@font/alegreya_bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/perks_offered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textStyle="italic"
                android:text="perks offered tv "
                android:textSize="16sp" />


