<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="40dp">

    <RelativeLayout
        android:id="@+id/committee_card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cardview_layerlist"
        android:paddingLeft="40dp"
        android:paddingTop="24dp"
        android:paddingRight="40dp"
        android:paddingBottom="24dp">

        <android.support.v7.widget.CardView
            android:id="@+id/committee_member_photo_card"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="60dp"
            app:cardElevation="0dp">

<!--                <View-->
<!--                    android:id="@+id/shine"-->

<!--                    android:background="@drawable/shine_bg"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent" />-->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/committee_member_photo"
                    android:layout_width="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/committee_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/committee_member_photo_card"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Member1"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/committee_member_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/committee_member_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
