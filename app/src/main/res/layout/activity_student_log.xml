<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_bg"
    tools:context=".Activity.AlumniLoginActivity">


    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="106dp"
        android:layout_marginBottom="431.68dp"
        app:srcCompat="@drawable/acm_white_logo" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        style="@style/username_pass_tv"
        android:layout_marginStart="45dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="345dp"
        android:text="username"
        android:textAllCaps="true" />

    <AutoCompleteTextView
        android:id="@+id/etEmails"
        style="@style/email_pass_edit"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="282dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="308dp"
        android:hint="@string/prompt_email"
        android:textColor="#3BFBFE"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        style="@style/username_pass_tv"
        android:layout_marginStart="45dp"
        android:layout_marginTop="338dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="275dp"
        android:text="password"
        android:textAllCaps="true" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="362dp"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/passwords"
            android:layout_width="285dp"
            style="@style/email_pass_edit"
            android:textColorHint="#3BFBFE"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="50dp"
            android:hint="@string/prompt_password"
            android:imeActionId="6"
            android:textColor="#3BFBFE"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionUnspecified"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true" />
    </android.support.design.widget.TextInputLayout>

    <!--            <EditText-->
    <!--                android:id="@+id/passwords"-->
    <!--                android:layout_width="match_parent"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:hint="@string/prompt_password"-->
    <!--                android:imeActionId="6"-->
    <!--                android:imeActionLabel="@string/action_sign_in_short"-->
    <!--                android:imeOptions="actionUnspecified"-->
    <!--                android:inputType="textPassword"-->
    <!--                android:maxLines="1"-->
    <!--                android:singleLine="true" />-->


    <Button
        android:id="@+id/forgot_password_tv"
        android:layout_width="113dp"
        android:layout_height="38dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="420dp"
        android:layout_marginBottom="203dp"
        android:background="@null"
        android:text="Forgot Password?"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="12sp" />

    <Button
        android:id="@+id/logins"
        style="@style/Signup_tv"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="468dp"
        android:background="@drawable/button_shape"
        android:text="Login"
        android:textColor="#0A0E2A"
        tools:text="Login" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="50dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="545dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="538dp"
            android:layout_weight="1"
            android:text="or connect with "
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#FFF"
            android:textSize="14sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="545dp"
            android:layout_weight="2"
            android:background="#FFF" />

    </LinearLayout>


